<GridPane alignment="center" hgap="10" prefHeight="400.0" prefWidth="600.0" vgap="10" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sweproject.main.SignUpPageController">
    <Label text="Fiscal Code:" GridPane.rowIndex="1" />

    <TextField fx:id="fiscalCode" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Name:" GridPane.rowIndex="3" />

    <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Surname:" GridPane.rowIndex="5" />

    <TextField fx:id="surname" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Password:" GridPane.rowIndex="7" />

    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Label text="Confirm Password:" GridPane.rowIndex="9" />

    <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="9" />

    <Button mnemonicParsing="false" onAction="#signUp" prefHeight="26.0" prefWidth="151.0" text="Sign up" GridPane.columnIndex="1" GridPane.rowIndex="11" />
   <Label fx:id="errorText" textFill="RED" GridPane.columnIndex="1" />
