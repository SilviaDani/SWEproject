<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sweproject.controller.AddObservationPageController">
    <children>
        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <Label fx:id="welcome_user" alignment="CENTER" layoutX="230.0" layoutY="14.0" text="Add observation" textAlignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            <Button layoutX="247.0" layoutY="344.0" mnemonicParsing="false" onAction="#confirmType" text="Next" textAlignment="CENTER">
               <padding>
                  <Insets bottom="5.0" left="40.0" right="40.0" top="5.0" />
               </padding></Button>
            <VBox alignment="CENTER" layoutY="49.0" prefHeight="295.0" prefWidth="600.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Choose observation type">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <ComboBox fx:id="observation_type_menu" onAction="#checkObservationType" prefHeight="26.0" prefWidth="198.0" />
                     </children>
                  </HBox>
                  <HBox fx:id="test_type_box" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" visible="false">
                     <children>
                        <Label text="Choose test type">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Label>
                        <ComboBox fx:id="test_type_menu" prefHeight="26.0" prefWidth="198.0" />
                        <CheckBox fx:id="positive_checkbox" mnemonicParsing="false" text="Positive">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </CheckBox>
                     </children>
                  </HBox>
                  <HBox fx:id="symptomatic_box" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" visible="false">
                     <children>
                        <CheckBox fx:id="symptomatic_checkbox" mnemonicParsing="false" text="Still symptomatic?" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            </children>
        </AnchorPane>
    </children>
</VBox>
